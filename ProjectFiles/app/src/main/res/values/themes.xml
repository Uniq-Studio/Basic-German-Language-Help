<resources xmlns:tools="http://schemas.android.com/tools">

    //--------------------------------------------------------------------
    //SPLASH SCREEN
    <style name="Theme.Splashscreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    //--------------------------------------------------------------------
    //APP THEME
    <!-- Base application theme. -->
    <style name="Theme.BasicGermanLanguageHelp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    //--------------------------------------------------------------------
    //ABOUT SCREEN
    <style name="Theme.AsseBackground" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#D3D3D3</item>
    </style>

    <style name="Theme.PicBackground" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#AAAAAA</item>
    </style>

    <style name="Theme.CenterPic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="Theme.CanBackground" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#B1B1B1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Theme.MainTitle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.Subtitle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Text" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    //--------------------------------------------------------------------
    //PHONE NUMBERS
    <style name="Theme.Service" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="Theme.Number" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingLeft">40dp</item>
    </style>

    <style name="Theme.divider" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/teal_200</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    //--------------------------------------------------------------------
    //PRE BIG TEXT
    <style name="Theme.AskForName" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>


    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>


    <style name="PreButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    //--------------------------------------------------------------------
    //BIG TEXT
    <style name="Theme.BigText" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">75sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>

    </style>

</resources>