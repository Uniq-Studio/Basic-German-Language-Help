<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.basicgermanlanguagehelp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.BasicGermanLanguageHelp">

        <activity
            android:name=".MainMenuActivity"
            android:theme="@style/Theme.BasicGermanLanguageHelp"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".AboutScreen"
            android:theme="@style/Theme.Splashscreen" />

        <activity
            android:name=".NumberScreen"
            android:theme="@style/Theme.BasicGermanLanguageHelp" />

        <activity
            android:name=".PreBigTexActivity"
            android:theme="@style/Theme.BasicGermanLanguageHelp" />

        <activity
            android:name=".BigTextActivity"
            android:theme="@style/Theme.Splashscreen" />

        <activity android:name=".NumberActivity"
            android:theme="@style/Theme.BasicGermanLanguageHelp"
            android:label="@string/NumAct"/>

        <activity android:name=".FamilyActivity"
            android:theme="@style/Theme.BasicGermanLanguageHelp"
            android:label="@string/FamAct"/>

        <activity android:name=".ColorActivity"
            android:theme="@style/Theme.BasicGermanLanguageHelp"
            android:label="@string/ColAct"/>

        <activity android:name=".PhrasesActivity"
            android:theme="@style/Theme.BasicGermanLanguageHelp"
            android:label="@string/PhrAct"/>

        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.Splashscreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>